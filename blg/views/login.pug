doctype html
html(lang='en')
  include includes/_header.pug
  body
      .section.row
          form.col.s6(method='POST' action='/loginhandler')
              div.form-group
                  label(for='user') Username
                  input.form-control(type='text' id='user' placeholder='username' name='user')
              div.form-group
                  label(for='password') Password
                  input.form-control(type='password' id='password' placeholder='password' name='password')
              .err #{err}
              button.waves-effect.waves-light.btn(type='submit') Log in
              a.waves-effect.waves-teal.btn-flat.btn_back(href='/signup') Sign Up
